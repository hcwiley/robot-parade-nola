red1 = #B52209;
*
  margin 0px
  padding 0px
  border 0px
  text-decoration none
  font-family "Helvetica", sans-serif

html, body
  width 100%
  height auto

a 
  font-style italic
  font-size 13pt
  color red1
  p
    color red1
a:hover
  text-decoration none
  cursor pointer
  font-variant small-caps
  color red1
  p
    color red1

p
  text-align left
  font-size 13pt
  color #555

strong
  font-variant small-caps
  font-size 18pt

#main
  margin 50px auto
  text-align center
  width 100%
  height auto
  min-height auto

#logo
  img
    width 100%
    height auto

nav
  div
    width 400px
    margin 0 auto
  a
    border-right 1px solid #fff
  a:last-child
    border-right none

@media (max-width: 400px)
  nav
    div
      width 300px
      margin 0 auto
      a.navbar-brand
        font-size 14px
        padding 15px 10px

.inline
  display inline-block

.bold
  font-weight bold
